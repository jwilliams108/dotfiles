scriptencoding utf-8

" ----------------------------------------------------------------------------
" display tweaks
" ----------------------------------------------------------------------------
"{{{

set lines=60 columns=180
set guifont=Source\ Code\ Pro:h14

" remove toolbar
set go-=T

" remove scrollbars
set go-=L
set go-=r

" Change cursor style when entering INSERT mode
let s:tmux = exists('$TMUX')

let end_insert   = "\<Esc>]50;CursorShape=1\x7"
let start_insert = "\<Esc>]50;CursorShape=0\x7"

if s:tmux
  let start_insert = s:TmuxWrap(start_insert)
  let end_insert   = s:TmuxWrap(end_insert)
endif

let &t_SI = start_insert
let &t_EI = end_insert

"}}}

" ----------------------------------------------------------------------------
" Local overrides
" ----------------------------------------------------------------------------
"{{{

if filereadable(glob("~/.gvimrc.local"))
  source ~/.gvimrc.local
endif

"}}}
