"appearance {{{

set lines=60 columns=180
set guifont=Source\ Code\ Pro\ for\ Powerline:h13
"set guifont=Consolas\ for\ Powerline:h14

" remove toolbar
set go-=T

" remove scrollbars
set go-=L
set go-=r

"set background=light
set background=dark

"colorscheme solarized
colorscheme seoul256

"set transparency=2

"}}}

"cursor styles {{{

" Change cursor style when entering INSERT mode
let s:tmux    = exists('$TMUX')

let end_insert    = "\<Esc>]50;CursorShape=1\x7"
let start_insert  = "\<Esc>]50;CursorShape=0\x7"

if s:tmux
  let start_insert  = s:TmuxWrap(start_insert)
  let end_insert    = s:TmuxWrap(end_insert)
endif

let &t_SI = start_insert
let &t_EI = end_insert

"}}}
