" encoding
set encoding=utf-8

" vim customisations
set nolist
set noic
set lbr
set wrap
set hidden
set autoindent
set copyindent
set laststatus=2

" softtabs, 2 spaces
set tabstop=2
set shiftwidth=2
set shiftround
set expandtab

" extra chars
set list listchars=tab:▸\ ,eol:¬,trail:·

" numbers
set number
set numberwidth=4

" text
set textwidth=80
set colorcolumn=+1
