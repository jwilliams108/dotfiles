# antigen setup and config {{{

local ZSH="$HOME/.zsh"
source $ZSH/plugins/antigen/antigen.zsh

# prezto plugins
antigen use prezto

antigen bundle osx

# oh-my-zsh plugins
antigen use oh-my-zsh

antigen bundle brew
antigen bundle git
antigen bundle tmux
antigen bundle fasd

# other plugins
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-history-substring-search

# local plugins
antigen bundle $ZSH/plugins/fzf

# theme
antigen theme $ZSH/themes scott

antigen apply

# }}}

# modularised config {{{

for config (~/.zsh/config/*.zsh) source $config

#}}}

# FZF config {{{

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

#}}}

# Source local configuration {{{

if [ -f $HOME/.zshrc_local ];
  then source $HOME/.zshrc_local
fi

#}}}

# welcome message {{{

echo -e "Distro: OS X $(sw_vers -productVersion)"
echo -e "Kernel: `uname -smr`"
echo -e "Shell:  `zsh --version`"
echo -e "Uptime:" `uptime | sed 's/^.*up/up/'`
echo -ne "Current Time: "; date

#}}}
